- if !current_user or !current_user.client
  = render_navigation(:level => 1)
- elsif current_user and current_user.client
  = render_navigation(:level => 1, :context => 'client')

- if current_user
  %ul.nav
    %li.dropdown
      %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
        = show_gravatar_for(current_user, 30) + "<span>#{t(:edit)} #{current_user}</span>"
        %b.caret
      = render_navigation(:level => 1, :context => 'secondary')
