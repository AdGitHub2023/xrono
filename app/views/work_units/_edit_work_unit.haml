= form_for @work_unit do |f|
  - if @work_unit.errors.any?
    #error_explanation
      %h2
        = pluralize(@work_unit.errors.count, "error")
        = "#{t(:prohibited_this_work_unit_from_being_saved)}:"
      %ul
        - @work_unit.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend= t(:edit_work_unit)

    .control-group
      %label.control-label= t(:scheduled_on)
      .controls
        = link_to @work_unit.scheduled_at.to_date, "#", :id => "schedule_modal_link"

    #schedule_modal
      %p= t(:enter_work_units_on_completion_day)
      .control-group
        %label.control-label= t(:scheduled_at)
        .controls
          = text_field_tag :scheduled_at, @work_unit.scheduled_at

    .control-group
      %label.control-label{:for => "work_unit_client_id"}= "#{t(:client)}:"
      = @work_unit.client
    .control-group
      %label.control-label{:for => "work_unit_project_id"}= "#{t(:project)}:"
      .controls
        = f.fields_for(:ticket, :include_id => false) do |b|
          = b.select :project_id, options_from_collection_for_select(@projects, "id", "name", @work_unit.project.id)
    .control-group
      %label.control-label{:for => "work_unit_ticket_id"}= "#{t(:ticket)}:"
      .controls
        = f.select :ticket_id, options_from_collection_for_select(@tickets, "id", "name", @work_unit.ticket.id)
    .control-group
      = f.label :hours_type, :class => 'control-label'
      .controls
        = f.select :hours_type, ['Normal', 'Overtime', 'CTO', 'PTO']

    .control-group
      = f.label :hours, :class => 'control-label'
      .controls
        = f.text_field :hours

    .control-group
      = f.label :description, :class => 'control-label'
      .controls
        = f.text_area :description, :class => 'xxlarge', :rows => 5

    .form-actions
      = f.hidden_field :scheduled_at, :value => @work_unit.scheduled_at
      = f.submit :class => 'btn primary'

- content_for :javascripts do
  = javascript_include_tag 'edit_work_unit'
