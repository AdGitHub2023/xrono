#client
  %table#client_details.zebra-striped
    %thead
      %tr
        %th= t(:projects)
        %th= t(:tickets)
        %th= t(:uninvoiced_hours)
        %th= t(:total_hours)
    %tfoot
      %tr
        %th= t(:all_projects)
        %th= @client.tickets.count
        %th= @client.uninvoiced_hours
        %th= @client.hours
    %tbody
      - if @incompleted_projects.any?
        - @incompleted_projects.each do |project|
          %tr{ :class => cycle("odd", "even") }
            %td= link_to project, project
            %td= project.tickets.count
            %td= project.uninvoiced_hours
            %td= project.hours
      - else
        %tr
          %td{:colspan => 4} No Projects to Show
