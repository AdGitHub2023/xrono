- content_for :javascripts do
  = javascript_include_tag "dashboard"
  = javascript_include_tag "schedule_modal"
  = javascript_include_tag "add_taxonomy"
  = javascript_include_tag "calendar"
  = javascript_include_tag "ticket_board"
  = javascript_include_tag "specify_project"

- if @message
  #message{:title => @message[:title], :style => "display: none;"}
    %p= @message[:body]
.yui3-g
  .yui3-u-1
    .gradient_border_wrap
      .gradient_border_content
        - project = current_user.work_units.last.project
        - if admin? || current_user.has_role?(:developer, project)
          = render :partial => "projects/specify"
        - else
          #div{:id => "restricted_access", :style=>"display:none;"}
        %div{:id => "in_dash_ticketboard"}        
          = render :partial => "shared/ticketboard", :locals => { :project => project }
.yui3-g
  .yui3-u-1
    .gradient_border_wrap
      .gradient_border_content
        = render :partial => 'shared/calendar', :locals => { :start_date => @start_date, :user => current_user }
        %p.week_pagination
          = render :partial => 'dashboard/base/week_pagination', :locals => { :start_date => @start_date }
.yui3-g
  .yui3-u-1-2
    .gradient_border_wrap
      .gradient_border_content
        = render :partial => 'tickets/add_ticket'
  .yui3-u-1-2
    .gradient_border_wrap
      .gradient_border_content
        = render :partial => 'work_units/add_work_unit'
